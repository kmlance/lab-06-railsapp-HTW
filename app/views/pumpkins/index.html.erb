<h1><%= t('pumpkins.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= link_to t('pumpkin.name'), :sort => "name" %></th>
      <th><%= link_to t('pumpkin.color'), :sort => "color" %></th>
      <th><%= link_to t('pumpkin.size'), :sort => "size" %></th>
      <th><%= link_to t("pumpkin.prize"), :sort => "price" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pumpkins.each do |pumpkin| %>
      <tr>
        <td><%= pumpkin.name %></td>
        <td><%= pumpkin.color %></td>
        <td><%= pumpkin.size %></td>
        <td><%= pumpkin.price %></td>
        <td><%= link_to t('pumpkin.show'), pumpkin %></td>
        <td><%= link_to t('pumpkin.edit'), edit_pumpkin_path(pumpkin) %></td>
        <td><%= link_to t('pumpkin.delete'), pumpkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pumpkin', new_pumpkin_path %>
