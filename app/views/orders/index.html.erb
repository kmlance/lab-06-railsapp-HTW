<h1><%= t('orders.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('order.customer_id') %></th>
      <th><%= t('order.placed_on') %></th>
      <th><%= t('order.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_id %></td>
        <td><%= order.placed_on %></td>
        <td><%= order.status %></td>
        <td><%= link_to t('pumpkin.show'), order %></td>
        <td><%= link_to t('pumpkin.edit'), edit_order_path(order) %></td>
        <td><%= link_to t('pumpkin.delete'), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
